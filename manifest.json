{
    "manifest_version": 2,
    "name": "PagerDuty Notifier",
    "version": "0.1",
    "description": "Chrome notifications for PagerDuty incidents.",
    "icons": {
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "64": "img/icon-64.png",
        "128": "img/icon-128.png",
        "256": "img/icon-256.png"
    },
    "permissions": [
      "notifications",
      "background",
      "https://*.pagerduty.com/api/v1/*"
    ],
    "background": {
      "scripts": [
        "js/pd-notification-background.js"
      ],
      "persistent": true
    },
    "web_accessible_resources": [
      "img/icon-256.png"
    ]
}
